<% include ./partials/header%>

    <div class="jumbotron">
      <h1 class="display-4 text-center"><strong>YUNG RIVER CHINESE RESTAURANT & BAR</strong></h1>
      <h1 class="text-center">TURKISH CUISINE OF WESTCHESTER</h1>
        
      
      <hr class="my-4">
      
          <div class="container text-center">
              
            <div>
                <% if(!currentUser) {%>
                    <a href="/login">
                    <button type="button"  id="rcorners3" class="btn btn-outline-light btn-lg">Log In</button>
                    </a>
                    <a href="/register">
                    <button type="button"  id="rcorners4" class="btn btn-outline-light btn-lg">Sign Up</button>
                    </a>
                    <% }else{ %>
                        
                    <% } %>
            </div>
          </div>
    </div>
    
    <div class="text-center">
        <p>For Orders</p>
        <p><i class="fas fa-phone"></i> 202-555-0183</p>
        <p><i class="fas fa-fax"></i> 202-555-0114</p>
    </div>
    <hr class="my-3">
    
    
      <div class="container text-center">
          <div >
              <p class="fontmenu font-weight-bolder">Menu</p>
          </div>
      <div class="col-sm">
        
         <% menuinhome.forEach(function(menus){ %>
         
          <!--<a href="/home/<%= menus._id %>">-->
              <div class="shadow-lg p-4 mb-5 bg-white border rounded" data-toggle="modal" data-target="#exampleModal">
                <div class=" float-left  "><%= menus.name %></div>
                <div class=" float-right ">$ <%= menus.price %></div>
              </div>
          <!--</a>-->
          

          
          <!-- Button trigger modal -->
        
               
                
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Do you want to</h5>
                           
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                          <div class="form-row">
                                <div class="col">
                                   <a href="/pickup/<%= menus._id %>" type="button" class="btn btn-secondary">Pick Up</a>
                                </div>
                                <div class="col">
                                  <h4> Or </h4>
                                </div>
                                <div class="col">
                                  <a href="/delivery/<%= menus._id %>" type="button" class="btn btn-secondary">Deliver</a>
                                </div>
                              </div>
                      </div>
                    </div>
                  </div>
                </div>
          
          <!--forEach-->
           <% }); %>
      </div>

    </div>
    
     <hr class="my-4">
     
     
    
    <div class="container">
        <h4>Reviews for Yung River Chinese Restaurant</h4>
            <a href="/about">
             <button type="button" class="btn btn-info">Go to Review</button>
            </a>
        <hr class="my-4">
        
         
      
    </div>
    
   
    
      
      
   
      
    
