<% include ./partials/header%>

<div class="container">
    
    <h2>Sign Up form</h2>
    <form action="/register" method="post">
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="inputusername" class="col-sm-2 col-form-label"><strong>Username</strong></label>
      <input type="text"  class="form-control" pattern="(?=.*[a-z])(?=.*[A-Z]).{3,}" id="inputusername" placeholder="username" name="username" required>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <label for="inputPassword"  class="col-sm-7 col-form-label"><strong>Password</strong> (At least 8 characters: lowercase, Uppercase, number) </label>
      <input type="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  id="inputPassword" placeholder="password" name="password" required>
    </div>
    
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </div>
  </form>
  
</div>



<% include ./partials/footer%>